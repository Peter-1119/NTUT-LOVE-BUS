<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusMap1">


    <ImageView
        android:layout_width="500dp"
        android:layout_height="813dp"
        app:srcCompat="@drawable/phone"
        android:id="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="362dp"
        android:layout_height="323dp" app:srcCompat="@drawable/school" android:id="@+id/imageView5"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:text="此站服務車號"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tv_showBusNum"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_showBusStop"
        app:layout_constraintStart_toEndOf="@+id/text4"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textColor="#F1F1F1"
        android:textSize="15sp"/>
    <TextView
        android:text="服務車號:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text4"
        app:layout_constraintStart_toStartOf="@+id/button2" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text" android:textColor="#F1F1F1" android:textSize="15sp"/>
    <TextView
        android:text="您選擇站牌:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text"
        app:layout_constraintStart_toStartOf="@+id/button2" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/button2" android:textSize="15sp" android:textColor="#F1F1F1"/>
    <TextView
        android:text="請選擇站牌:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView"
        android:textColor="#F1F1F1" app:layout_constraintStart_toStartOf="@+id/button2"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/text" android:textSize="15sp"/>
    <TextView
        android:text="顯示站牌"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tv_showBusStop"
        app:layout_constraintStart_toEndOf="@+id/text" android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/button2"
        android:textColor="#F1F1F1" android:textSize="15sp"/>
    <Button
        android:text="公車動態介面"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" android:bufferType="editable" android:layerType="hardware"
        android:typeface="normal"
        style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="parent"/>


    <fragment
        android:layout_width="437dp"
        android:layout_height="448dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Spinner android:layout_width="270dp"
        android:layout_height="31dp"

        android:id="@+id/spinner1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="120dp" android:layout_marginStart="120dp"

        tools:visibility="visible" android:visibility="visible"
        android:background="#9EE7EBEA"
        app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginTop="8dp">
    </Spinner>
    <Button
        android:text="退出"
        android:layout_width="84dp"
        android:layout_height="42dp" android:id="@+id/back"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner1"/>

    <Button
        android:text="查看發車時刻表"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchMain2"
        app:layout_constraintStart_toStartOf="@+id/text4"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/map"
        android:textColor="#1A237E"
        android:textStyle="bold"
        android:background="#80D8FF"
        style="@android:style/Widget.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>